<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="application.IndexController">
   <left>
    <!-- onMouseReleased="" -->
      <VBox prefHeight="400.0" prefWidth="50.0" style="-fx-background-color: #eb3434;">
      	<children>
      		<ImageView onMouseReleased="#classView" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
	               <image>
	                  <Image url="@class.png">
	                  </Image>
	               </image>
	               <VBox.margin>
	                  <Insets top="10.0" left="25.0" right="25.0" />
	               </VBox.margin>
	         </ImageView>
	         <ImageView onMouseReleased="#entryView" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
	               <image>
	                  <Image url="@entry.png">
	                  </Image>
	               </image>
	               <VBox.margin>
	                  <Insets top="10.0" left="25.0" right="25.0" />
	               </VBox.margin>
	         </ImageView>
	         <ImageView onMouseReleased="#priorityView" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
	               <image>
	                  <Image url="@priority.png">
	                  </Image>
	               </image>
	               <VBox.margin>
	                  <Insets top="10.0" left="25.0" right="25.0" />
	               </VBox.margin>
	         </ImageView>
	         <ImageView onMouseReleased="#settingsView" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
	               <image>
	                  <Image url="@settings.png">
	                  </Image>
	               </image>
	               <VBox.margin>
	                  <Insets top="10.0" left="25.0" right="25.0" />
	               </VBox.margin>
	         </ImageView>
         </children>
      </VBox>
   </left>
   <center>
      <GridPane prefHeight="400.0" prefWidth="650.0" style="-fx-background-color: #000;">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
   </center>
</BorderPane>
